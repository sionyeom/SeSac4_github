                url : "http://localhost:8080/receive",
                data : {
                    name : "hello"
                }
            }).then((res) => {
                console.log(res.data.name);
            })
        }
        const sendGet = () => {
            axios({
                method : "get",
                url : "http://localhost:8080/receive",
                params : {
                    name : "hello"
                }
            }).then((res) => {
                return res.data
            }).then((d) => {
                console.log(d.message);
            })
